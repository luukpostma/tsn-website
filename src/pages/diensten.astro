---
import Layout from '../layouts/Layout.astro';
import Services from '../components/Services.astro';
import Werkwijze from '../components/Werkwijze.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
---

<Layout title="Diensten">
  <Services showAll={true} buttonText="Offerte aanvragen" buttonHref="/contact" isMainPage={true} />

  <Werkwijze />
  <FAQ />
  <CTA />
</Layout>

<style>
  .diensten-hero {
    background-color: var(--dark-blue-500);
  }

  .diensten-hero h1 {
    color: var(--white);
    margin-bottom: var(--spacing-24);
  }

  .diensten-hero__description {
    color: var(--white);
    max-width: 768px;
  }
</style>
