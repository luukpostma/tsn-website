---
import Layout from '../layouts/Layout.astro';
import FAQ from '../components/FAQ.astro';
import Button from '../components/Button.astro';
---

<Layout title="Contact">
  <section class="contact">
    <div class="container">
      <div class="contact__grid">
        <div class="contact__info">
          <p class="contact__label">
            <img src="/icons/line.svg" alt="" />
            Contact
          </p>
          <h1>Wat heeft u nodig?<br /><span>We helpen u graag.</span></h1>
          <p class="contact__text">
            Heb je vragen of wil je een offerte? Neem contact op via telefoonnummer, email of vul het formulier in. We helpen je graag verder.
          </p>

          <div class="contact__details">
            <div class="contact__item">
              <img src="/icons/phone-icon.svg" alt="" />
              <a href="tel:+31690875647">+31690875647</a>
            </div>
            <div class="contact__item">
              <img src="/icons/mail-icon.svg" alt="" />
              <a href="mailto:info@timmerfabrieksintnyk.nl">info@timmerfabrieksintnyk.nl</a>
            </div>
            <div class="contact__item">
              <img src="/icons/clock-icon.svg" alt="" />
              <span>Ma - Vr 8:00 - 17:30</span>
            </div>
            <div class="contact__item">
              <img src="/icons/location-icon.svg" alt="" />
              <span>Bovenkuier 38, 8521 MG Sint Nicolaasga</span>
            </div>
          </div>
        </div>

        <div class="contact__form-wrapper">
          <div id="form-success" class="form__success" style="display: none;">
            <span>Bericht verzonden!</span>
            <img src="/icons/check-icon.svg" alt="" />
          </div>

          <form id="contact-form" class="contact__form">
            <input type="hidden" name="access_key" value="581267bb-c537-4e8e-b324-55dcd841c68b" />
            <input type="hidden" name="subject" value="Nieuw bericht via website" />
            <input type="hidden" name="from_name" value="Timmerfabriek Sint Nyk Website" />
            <input type="checkbox" name="botcheck" style="display: none;" />

            <div class="form__group">
              <label for="naam">Naam</label>
              <input type="text" id="naam" name="naam" placeholder="Jan de Vries" required />
            </div>
            <div class="form__group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="naam@email.nl" required />
            </div>
            <div class="form__group">
              <label for="bericht">Bericht</label>
              <textarea id="bericht" name="bericht" placeholder="Typ hier uw bericht" rows="5" required></textarea>
            </div>
            <Button type="submit">
              <span class="form__button-text">Versturen</span>
              <span class="form__button-loading" style="display: none;">Verzenden...</span>
            </Button>
          </form>
        </div>
      </div>
    </div>
  </section>

    <FAQ />
</Layout>

<style>
  .contact {
    background-color: var(--dark-blue-500);
  }

  .contact__grid {
    display: grid;
    gap: var(--spacing-48);
  }

  .contact__label {
    display: flex;
    align-items: center;
    gap: var(--spacing-12);
    font-weight: var(--font-semibold);
    margin-bottom: var(--spacing-16);
    color: var(--white);
  }

  .contact__label img {
    width: 24px;
    filter: brightness(0) invert(1);
  }

  .contact__info h1 {
    font-size: 2.25rem;
    line-height: 2.75rem;
    color: var(--white);
    margin-bottom: var(--spacing-24);
  }

  .contact__info h1 span {
    font-weight: var(--font-regular);
  }

  @media (min-width: 1024px) {
    .contact__info h1 {
      font-size: 3rem;
      line-height: 3.75rem;
    }
  }

  .contact__text {
    color: var(--white);
    margin-bottom: var(--spacing-48);
  }

  .contact__details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-20);
  }

  .contact__item {
    display: flex;
    align-items: center;
    gap: var(--spacing-16);
  }

  .contact__item img {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    filter: brightness(0) invert(1);
  }

  .contact__item span,
  .contact__item a {
    color: var(--white);
  }

  .contact__item a:hover {
    opacity: 1;
  }

  .contact__form-wrapper {
    background-color: var(--dark-blue-500);
  }

  .contact__form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-24);
  }

  .form__group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
  }

  .form__group label {
    color: var(--white);
    font-weight: var(--font-semibold);
  }

  .form__group input,
  .form__group textarea {
    padding: var(--spacing-16);
    border: none;
    background-color: var(--white);
    font-family: inherit;
    font-size: 1rem;
    color: var(--gray-900);
  }

  .form__group input::placeholder,
  .form__group textarea::placeholder {
    color: var(--gray-500);
  }

  .form__group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form__success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-12);
    background-color: var(--green-300);
    padding: var(--spacing-16) var(--spacing-24);
    margin-bottom: var(--spacing-24);
  }

  .form__success span {
    color: var(--green-800);
    font-weight: var(--font-semibold);
    font-size: 1.125rem;
  }

  .form__success img {
    width: 24px;
    height: 24px;
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .contact__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-64);
      align-items: start;
    }

    .contact__form-wrapper {
      padding-top: var(--spacing-48);
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('form-success') as HTMLElement;
  const buttonText = document.querySelector('.form__button-text') as HTMLElement;
  const buttonLoading = document.querySelector('.form__button-loading') as HTMLElement;
  const submitButton = document.querySelector('.button') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    buttonText.style.display = 'none';
    buttonLoading.style.display = 'inline';
    submitButton.disabled = true;

    const formData = new FormData(form);

    try {
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        successMessage.style.display = 'flex';
        form.reset();
        buttonText.style.display = 'inline';
        buttonLoading.style.display = 'none';
        submitButton.disabled = false;
      } else {
        alert('Er is iets misgegaan. Probeer het opnieuw.');
        buttonText.style.display = 'inline';
        buttonLoading.style.display = 'none';
        submitButton.disabled = false;
      }
    } catch (error) {
      alert('Er is iets misgegaan. Probeer het opnieuw.');
      buttonText.style.display = 'inline';
      buttonLoading.style.display = 'none';
      submitButton.disabled = false;
    }
  });
</script>
